{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ExternalServices": {
    "AiAgent": {
      "BaseUrl": "http://ai-agent:8000/"
    },
    "Rag": {
      "BaseUrl": "http://rag-service:8001/"
    },
    "ToolExecution": {
      "BaseUrl": "http://tool-exec:8002/"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
  "OpenTelemetry": {
    "Otlp": {
      "Endpoint": ""
    }
  }
}
